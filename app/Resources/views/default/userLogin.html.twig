{% extends "layout-base.html.twig" %}

{% block logo %}
	<div class="col-xs-12">
		<a href="{{ path('home') }}" class="logo" id="solo" rel="home">
			<img alt="Brand" src="/trippit_symfony/web/img/logo.png">
		</a>
	</div>
{% endblock %}

{% block menu %} {% endblock %}

{% block main %}

	<div class="login container-fluid">
		<div class="row">
			<div class="col-xs-12 col-sm-4 col-sm-offset-4">
				<div>
					<a class="facebook-login" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" alt="Sign in with Facebook">ACCEDI CON FACEBOOK</a>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12 col-sm-4 col-sm-offset-4">
				<h5>Eseguendo l'accesso con Facebook concedi a Trippit l'accesso ad alcuni dei tuoi dati personali, inclusa la lista dei tuoi amici.</h5>
			</div>
		</div>
		<div class="text-link">
			<div class="row">
				<div class="col-xs-12 col-sm-4 col-sm-offset-4">
					<a href="{{ path('home') }}"><button type="button" class="btn btn-link">Annulla</button></a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}