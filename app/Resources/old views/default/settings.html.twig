{% extends "layout-base.html.twig" %}


{% block main %} 
		{# profile info #}
		<div class="first container-fluid">
		    <div class="row">
		        <div class="circle-cropping">
		            <div class="col-xs-12 col-sm-4 col-md-3 col-md-offset-2">
		                <img class="img-circle" src="{{ picture }}" alt="{{ userName }}">
		            </div>
		        </div>
		        <div class="col-xs-12 col-sm-8 col-md-4">
		            <div class="block">
		                <h2>{{ userName }}</h2>
		                <div class="separator"></div>
		                <p>{{ location }}</p>
		                <div class="separator"></div>
		                <h6>Email di Facebook</h6>
		                <p>{{ eMail }}</p>
		            </div>
		        </div>
		    </div>
		</div>

		{# form #}
		<div class="form-ask row container-fluid">
		        <div class="col-xs-12 col-md-6 col-md-offset-3">
		            <div class="block">
						<h3>Impostazioni modificabili</h3>									
					
						{{ form_start(formSettings) }}
							<h5>Indirizzo email alternativo:</h5>
							{{ form_widget(formSettings.secondMail, {'attr': {'placeholder': secondaryMail } }) }}
							<br>
							<h5>Et√†:</h5>
							{{ form_widget(formSettings.age, {'attr': {'placeholder': age} }) }}
							<br>
							<h5>Numero di telefono:</h5>
							{{ form_widget(formSettings.phone, {'attr': {'placeholder': phone} }) }}
							<br>
							<h5>Motto:</h5>
							{{ form_widget(formSettings.motto, {'attr': {'placeholder':  motto} }) }}
							
							{{ form_widget(formSettings.save, {'attr': {'class': 'btn btn-advice'} }) }}
						{{ form_end(formSettings) }}
		            </div>
		            <div class="spacer"></div>
		        </div>
		    </div>
		</div>
{% endblock %}